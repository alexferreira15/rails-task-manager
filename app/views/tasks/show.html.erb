<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<p><%= 'The task is completed' %></p>
<% else %>
<p><%= 'The task is not completed yet' %></p>
<% end %>

<%= link_to "Edit a task", task_edit_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>
